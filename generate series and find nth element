#include<stdio.h>
#include<string.h>
// Read only region start

int seriesN(int input1,int input2,int input3,int input4)
{
    // Read only region end
	// Write code here
     int n=input1;
	 int n1=input2-input1;
	int n2=input3-input2;
    for(int i=1;i<input4;i++){
		if(i%2==0){
			n=n+n2;	
		}
		else{
			n=n+n1;
			
		}
	}

	return n;
}
